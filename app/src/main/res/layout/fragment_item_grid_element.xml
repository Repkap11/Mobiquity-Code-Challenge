<?xml version="1.0" encoding="utf-8"?>
<com.repkap11.mobiquity.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.repkap11.mobiquity.ImageGridFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:id="@+id/fragment_item_grid_element_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="center" />

        <ImageView
            android:background="@drawable/round_corner_frame"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


</com.repkap11.mobiquity.SquareLinearLayout>
